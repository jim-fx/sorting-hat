// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid        String  @id @default(cuid())
  created_at DateTime
  name       String
  role       Role @default(USER)
  hash       String
}

enum Role {
  USER
  ADMIN
}